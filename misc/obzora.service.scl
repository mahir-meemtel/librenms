[Unit]
Description=ObzoraNMS SNMP Poller Service
After=network.target

[Service]
ExecStart=/usr/bin/scl enable rh-python36 -- /opt/obzora/obzora-service.py -v
ExecReload=/bin/kill -HUP $MAINPID
WorkingDirectory=/opt/obzora
User=obzora
Group=obzora
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target
